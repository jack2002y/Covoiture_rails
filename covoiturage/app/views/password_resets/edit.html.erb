<h1>Reset Your Password</h1>

<% if params[:varaible].present? %>

    <%= form_with model: @conducteur, url: password_reset_path(token: params[:token]) do |form|  %>

        <% if form.object.errors.any? %>

            <% form.object.errors.full_messages.each do |message| %>

                <div><%= message %></div>
            
            <% end %>
            
        <% end %>

        <div>

            <%= form.label :password %>
            <%= form.password_field :password %>

        </div>

        <div>

            <%= form.label :password_confrimation %>
            <%= form.password_field :password_confrimation %>

        </div>

        <div>
            <%= form.submit "Reset Your Password" %>
        </div>

    <% end %>

<% else %>

    <%= form_with model: @user, url: password_reset_path(token: params[:token]) do |form|  %>

    <% if form.object.errors.any? %>

        <% form.object.errors.full_messages.each do |message| %>

            <div><%= message %></div>
        
        <% end %>
        
    <% end %>

    <div>

        <%= form.label :password %>
        <%= form.password_field :password %>

    </div>

    <div>

        <%= form.label :password_confrimation %>
        <%= form.password_field :password_confrimation %>

    </div>

    <div>
        <%= form.submit "Reset Your Password" %>
    </div>

    <% end %>

<% end %>